<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Refine" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_p</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="StyleAddTextView" parent="Theme.Refine">
        <item name="android:textColor">@color/black_text_p</item>
        <item name="fontFamily">@font/ps_bold</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="StyleAddEditText" parent="Theme.Refine">
        <item name="android:textColor">@color/black_text_s</item>
        <item name="fontFamily">@font/ps_regular</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:padding">@dimen/_6sdp</item>
    </style>
</resources>